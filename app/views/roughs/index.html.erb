<p id="notice"><%= notice %></p>

<h1>Roughs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roughs.each do |rough| %>
      <tr>
        <td><%= rough.name %></td>
        <td><%= link_to 'Show', rough %></td>
        <td><%= link_to 'Edit', edit_rough_path(rough) %></td>
        <td><%= link_to 'Destroy', rough, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rough', new_rough_path %>
